{
  "name": "backend-blog-app",
  "version": "1.0.0",
  "type": "module",
  "description": "",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "npx jest --coverage",
    "test:watch": "npx jest --watch",
    "test:integration": "npx jest --testPathPattern=integration",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "format": "prettier --write \"**/*.{js,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,json,md}\"",
    "format:lint": "npm run format && npm run lint:fix"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^6.9.2",
    "multer": "^1.4.5-lts.1",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.31.0",
    "eslint": "^9.31.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.5.3",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "nodemon": "^3.0.0",
    "prettier": "^3.6.2"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {},
    "globals": {
      "__esModule": true
    },
    "collectCoverageFrom": [
      "**/*.js",
      "!**/node_modules/**",
      "!**/uploads/**",
      "!**/coverage/**",
      "!**/__tests__/**"
    ],
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/*.{test,spec}.js"
    ]
  }
}
